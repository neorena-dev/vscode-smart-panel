{
  "name": "vscode-smart-panel",
  "displayName": "Smart Panel",
  "description": "Automatically maximizes the bottom panel when there are no open editor tabs",
  "version": "0.0.1",
  "publisher": "neowang",
  "repository": {
    "type": "git",
    "url": "https://github.com/neorena-dev/vscode-smart-panel.git"
  },
  "homepage": "https://github.com/neorena-dev/vscode-smart-panel#readme",
  "bugs": {
    "url": "https://github.com/neorena-dev/vscode-smart-panel/issues"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "panel",
    "terminal",
    "auto",
    "maximize",
    "productivity"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "smartPanel.maximizePanel",
        "title": "Maximize Panel",
        "category": "Smart Panel"
      },
      {
        "command": "smartPanel.restorePanel", 
        "title": "Restore Panel",
        "category": "Smart Panel"
      },
      {
        "command": "smartPanel.toggleAutoMaximize",
        "title": "Toggle Auto-Maximize",
        "category": "Smart Panel"
      }
    ],
    "configuration": {
      "title": "Smart Panel",
      "properties": {
        "smartPanel.enableAutoMaximize": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic panel maximization when no editors are open"
        },
        "smartPanel.editorOpenBehavior": {
          "type": "string",
          "enum": ["normal", "hidden"],
          "enumItemLabels": ["Restore to Normal Size", "Hide Completely"],
          "enumDescriptions": [
            "Restore the panel to its normal size when editors open",
            "Hide the panel completely when editors open"
          ],
          "default": "normal",
          "description": "How to handle the panel when an editor tab is opened"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "18.x",
    "typescript": "^4.9.4"
  }
}